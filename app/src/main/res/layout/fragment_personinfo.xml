<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.personinfo.PersoninfoFragment"
    android:background="@drawable/personinfobackgroud">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/gobackbutton"
        android:layout_width="16.5dp"
        android:layout_height="16dp"
        android:layout_marginTop="40dp"
        android:layout_marginStart="18dp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@drawable/gobackimage" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="72dp"
        tools:context=".ui.personinfo.PersoninfoFragment">

        <include
            android:id="@+id/personinfobutton"
            layout="@layout/componet_personinfo" />

        <!-- 第二個部分：用戶個人信息切換按鈕 -->
        <LinearLayout
            android:id="@+id/Personinfochangebutton"
            android:layout_width="345dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:paddingStart="16dp"
            android:paddingTop="16dp"
            android:paddingEnd="16dp"
            android:paddingBottom="8dp">

            <!-- 用戶個人檔案按鈕 -->
            <Button
                android:id="@+id/profileButton"
                android:layout_width="91dp"
                android:layout_height="35dp"
                android:background="@drawable/bg_radius_8dp"
                android:backgroundTint="@color/profilebuttonbackground"
                android:text="Profile"
                android:textColor="@color/chosenbuttontext"
                android:textSize="12sp"
                android:textStyle="bold"
                tools:ignore="HardcodedText,TouchTargetSizeCheck" />

            <!-- 使用空白的 View 來實現間距 -->
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <!-- 用戶付款按鈕 -->
            <Button
                android:id="@+id/paymentButton"
                android:layout_width="91dp"
                android:layout_height="wrap_content"
                android:text="Payment"
                android:textColor="@color/nonchosenbuttontext"
                android:textSize="12sp"
                android:textStyle="bold"
                android:background="@drawable/bg_radius_8dp"
                android:backgroundTint="@color/transparent"
                tools:ignore="HardcodedText" />

            <!-- 使用空白的 View 來實現間距 -->
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <!-- 用戶租賃記錄按鈕 -->
            <Button
                android:id="@+id/rentRecordButton"
                android:layout_width="91dp"
                android:layout_height="wrap_content"
                android:text="Rent Record"
                android:textColor="@color/nonchosenbuttontext"
                android:textSize="12sp"
                android:textStyle="bold"
                android:background="@drawable/bg_radius_8dp"
                android:backgroundTint="@color/transparent"
                tools:ignore="HardcodedText" />

        </LinearLayout>

        <!-- 第三個部分：用戶個人檔案信息 -->
        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/CustomScrollBar">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <LinearLayout
                android:id="@+id/Personprofile"
                android:layout_width="345dp"
                android:layout_height="223dp"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:layout_marginBottom="26dp"
                android:background="@drawable/bg_radius_20dp"
                android:backgroundTint="@color/pesonimagebuttonbackground"
                android:orientation="horizontal"
                android:paddingStart="16dp"
                android:paddingTop="8dp"
                android:paddingEnd="16dp"
                android:paddingBottom="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <!-- 用戶名稱和其他信息 -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/personprofiletextview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Profile"
                        android:textColor="@color/personnametext"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/otherInfoDetail1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Name"
                        android:textColor="@color/personotherinfotext"
                        android:textSize="16sp"
                        tools:ignore="HardcodedText" />
                    <TextView
                        android:id="@+id/otherInfoDetail2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="PhoneNumber"
                        android:textColor="@color/personotherinfotext"
                        android:textSize="16sp"
                        tools:ignore="HardcodedText" />
                    <TextView
                        android:id="@+id/otherInfoDetail3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Email"
                        android:textColor="@color/personotherinfotext"
                        android:textSize="16sp"
                        tools:ignore="HardcodedText" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="345dp"
                android:layout_height="223dp"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:layout_marginBottom="26dp"
                android:background="@drawable/bg_radius_20dp"
                android:backgroundTint="@color/pesonimagebuttonbackground"
                android:orientation="horizontal"
                android:paddingStart="16dp"
                android:paddingTop="8dp"
                android:paddingEnd="16dp"
                android:paddingBottom="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <!-- 用戶名稱和其他信息 -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Profile"
                        android:textColor="@color/personnametext"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Name"
                        android:textColor="@color/personotherinfotext"
                        android:textSize="16sp"
                        tools:ignore="HardcodedText" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="PhoneNumber"
                        android:textColor="@color/personotherinfotext"
                        android:textSize="16sp"
                        tools:ignore="HardcodedText" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Email"
                        android:textColor="@color/personotherinfotext"
                        android:textSize="16sp"
                        tools:ignore="HardcodedText" />
                </LinearLayout>
            </LinearLayout>
                <LinearLayout
                    android:layout_width="345dp"
                    android:layout_height="223dp"
                    android:layout_marginStart="24dp"
                    android:layout_marginEnd="24dp"
                    android:layout_marginBottom="26dp"
                    android:background="@drawable/bg_radius_20dp"
                    android:backgroundTint="@color/pesonimagebuttonbackground"
                    android:orientation="horizontal"
                    android:paddingStart="16dp"
                    android:paddingTop="8dp"
                    android:paddingEnd="16dp"
                    android:paddingBottom="8dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <!-- 用戶名稱和其他信息 -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Profile"
                            android:textColor="@color/personnametext"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Name"
                            android:textColor="@color/personotherinfotext"
                            android:textSize="16sp"
                            tools:ignore="HardcodedText" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="PhoneNumber"
                            android:textColor="@color/personotherinfotext"
                            android:textSize="16sp"
                            tools:ignore="HardcodedText" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Email"
                            android:textColor="@color/personotherinfotext"
                            android:textSize="16sp"
                            tools:ignore="HardcodedText" />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="345dp"
                    android:layout_height="223dp"
                    android:layout_marginStart="24dp"
                    android:layout_marginEnd="24dp"
                    android:layout_marginBottom="26dp"
                    android:background="@drawable/bg_radius_20dp"
                    android:backgroundTint="@color/pesonimagebuttonbackground"
                    android:orientation="horizontal"
                    android:paddingStart="16dp"
                    android:paddingTop="8dp"
                    android:paddingEnd="16dp"
                    android:paddingBottom="8dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <!-- 用戶名稱和其他信息 -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Profile"
                            android:textColor="@color/personnametext"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Name"
                            android:textColor="@color/personotherinfotext"
                            android:textSize="16sp"
                            tools:ignore="HardcodedText" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="PhoneNumber"
                            android:textColor="@color/personotherinfotext"
                            android:textSize="16sp"
                            tools:ignore="HardcodedText" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Email"
                            android:textColor="@color/personotherinfotext"
                            android:textSize="16sp"
                            tools:ignore="HardcodedText" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</FrameLayout>
